<div class="container">

<% if user_signed_in? %>
<h1>Abouts</h1>

<table>
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Tagline</th>
      <th>Hobbies</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @abouts.each do |about| %>
      <tr>
        <td><%= about.firstname %></td>
        <td><%= about.lastname %></td>
        <td><%= about.tagline %></td>
        <td><%= about.hobbies %></td>
        <td><%= link_to "Show", about %></td>
        <td><%= link_to "Edit", edit_about_path(about) %></td>
        <td><%= link_to "Destroy", about, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New About", new_about_path %>

<% else %>
 <% @abouts.each do |about| %>
       <p style="font-size: 48px;"><strong>Hi, I'm <%= about.firstname %> <%= about.lastname %>.</strong></p>
       <p style="font-size: 40px;"><%= about.tagline %> </p>
       <p style="font-size: 36px;"><%= about.hobbies %> </p>
    <% end %>

<% end %>

</div>