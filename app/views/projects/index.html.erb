
<h1>Projects</h1>

<% if user_signed_in? %>



<div class="projects">
    <table class="projects-table">
    <thead>
        <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Demo</th>
        <th>Github</th>
        <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @projects.each do |project| %>
        <tr>
            <td><%= project.name %></td>
            <td><%= project.description %></td>
            <td><%= project.demo %></td>
            <td><%= project.github %></td>
            <% if user_signed_in? %>
                <td><%= link_to "Show", project %></td>
                <td><%= link_to "Edit", edit_project_path(project) %></td>
                <td><%= link_to "Destroy", project, method: :delete, data: { confirm: "Are you sure?" } %></td>
            <% end %>
        </tr>
        <% end %>
    </tbody>
        <% if user_signed_in? %>
    <tfoot>
       <tr>
       <td><%= link_to "New Project", new_project_path %> </td>
       </tr>
    </tfoot>
    <% end %>
    </table>

    <br>

</div>
<% else %>

<div class="projects">
    <table class="projects-table">
    <thead>
        <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Demo</th>
        <th>Github</th>
        <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @projects.each do |project| %>
        <tr>
            <td><%= project.name %></td>
            <td><%= project.description %></td>
            <td><%= project.demo %></td>
            <td><%= project.github %></td>
            <td><%= link_to "Show", project %></td>
        </tr>
        <% end %>
    </tbody>
    </table>

    <br>

</div>
<% end %>





